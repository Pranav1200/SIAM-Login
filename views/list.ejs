<body>
  <div class="jumbotron">
  <p>
    <h2 style=" font-family: 'Montserrat', sans-serif; font-size: 50px; color: wheat;">Siam Members</h2>
  </p>
  <p></p><p></p>
      <div class="row">
        <% for(var i=0; i<mem.length; i++){ %>
                
           <div class="col-md-3 col-sm-6" >
             <div class="card" >
              <img class="card-img-top" src="img_avatar1.png" alt="Card image">
              <div class="card-body">
              <h4 class="card-title" style="font-weight: 800"><%= mem[i].name %></h4>
              <p class="card-text">Hi There</p>
              <a href="/member/<%= mem[i]._id%>" class="btn btn-primary btn-sm ">See Profile</a>
              
              
            </div>
          </div>
        </div>    
                
                
                 <!-- <li> Username : <%= mem[i].username %> </li>
                <li> Email : <%= mem[i].email %> </li>
